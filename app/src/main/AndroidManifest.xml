<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jt.mygradeandroid" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SchoolActivity"
            android:label="Schools"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SemesterActivity"
            android:label="Semesters"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".ClassActivity"
            android:screenOrientation="portrait"
            android:label="Classes" >
        </activity>
        <activity android:name=".GradeActivity"
            android:screenOrientation="portrait"
            android:label="Grades"
            />
        <activity android:name=".AddSchoolActivity"
            android:screenOrientation="portrait"
            android:label="Add School"
            >
        </activity>
        <activity android:name=".AddSemesterActivity"
            android:screenOrientation="portrait"
            android:label="Add Semester"
            >
        </activity>
        <activity android:name=".AddClassActivity"
            android:screenOrientation="portrait"
            android:label="Add Class"
            >
        </activity>
        <activity android:name=".AddGradeActivity"
            android:screenOrientation="portrait"
            android:label="Add Grade"
            >
        </activity>
    </application>

</manifest>
