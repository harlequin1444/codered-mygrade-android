<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jt.mygradeandroid.AddClassActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Class"
        android:id="@+id/lblTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtFinalGrade"
        android:layout_alignBottom="@+id/lblFinalGrade"
        android:layout_alignRight="@+id/lblTitle"
        android:layout_alignEnd="@+id/lblTitle"
        android:layout_toEndOf="@+id/lblClassName"
        android:layout_alignLeft="@+id/lblTitle"
        android:layout_alignStart="@+id/lblTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Final Grade"
        android:id="@+id/lblFinalGrade"
        android:layout_marginTop="124dp"
        android:layout_below="@+id/lblTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtClassName"
        android:layout_above="@+id/txtFinalGrade"
        android:layout_alignLeft="@+id/txtFinalGrade"
        android:layout_alignStart="@+id/txtFinalGrade"
        android:layout_marginBottom="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Class Name"
        android:id="@+id/lblClassName"
        android:layout_alignBottom="@+id/txtClassName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Homework"
        android:id="@+id/lblHomeWork"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/txtFinalGrade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quiz"
        android:id="@+id/lblQuiz"
        android:layout_below="@+id/lblHomeWork"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Exam"
        android:id="@+id/lblFirstExam"
        android:layout_below="@+id/lblQuiz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Second Exam"
        android:id="@+id/lblSecondExam"
        android:layout_below="@+id/lblFirstExam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Third Exam"
        android:id="@+id/lblThirdExam"
        android:layout_below="@+id/lblSecondExam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fourth Exam"
        android:id="@+id/lblFourthExam"
        android:layout_below="@+id/lblThirdExam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Final Exam"
        android:id="@+id/lblFinalExam"
        android:layout_below="@+id/lblFourthExam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Project"
        android:id="@+id/lblProject"
        android:layout_below="@+id/lblFinalExam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Other"
        android:id="@+id/lblOther"
        android:layout_below="@+id/lblProject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtHomework"
        android:layout_above="@+id/lblQuiz"
        android:layout_alignRight="@+id/txtQuiz"
        android:layout_alignEnd="@+id/txtQuiz"
        android:layout_alignLeft="@+id/txtQuiz"
        android:layout_alignStart="@+id/txtQuiz" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQuiz"
        android:layout_alignBottom="@+id/lblQuiz"
        android:layout_alignRight="@+id/txtFinalGrade"
        android:layout_alignEnd="@+id/txtFinalGrade"
        android:layout_alignLeft="@+id/lblTitle"
        android:layout_alignStart="@+id/lblTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtFirstExam"
        android:layout_above="@+id/lblSecondExam"
        android:layout_alignRight="@+id/txtHomework"
        android:layout_alignEnd="@+id/txtHomework"
        android:layout_alignLeft="@+id/txtSecondExam"
        android:layout_alignStart="@+id/txtSecondExam" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtSecondExam"
        android:layout_above="@+id/lblThirdExam"
        android:layout_alignRight="@+id/txtHomework"
        android:layout_alignEnd="@+id/txtHomework"
        android:layout_toEndOf="@+id/lblSecondExam"
        android:layout_alignLeft="@+id/lblTitle"
        android:layout_alignStart="@+id/lblTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtThirdExam"
        android:layout_above="@+id/lblFourthExam"
        android:layout_alignRight="@+id/txtSecondExam"
        android:layout_alignEnd="@+id/txtSecondExam"
        android:layout_alignLeft="@+id/txtFinalExam"
        android:layout_alignStart="@+id/txtFinalExam" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtFourthExam"
        android:layout_alignBottom="@+id/lblFourthExam"
        android:layout_alignRight="@+id/txtThirdExam"
        android:layout_alignEnd="@+id/txtThirdExam"
        android:layout_alignLeft="@+id/txtFinalExam"
        android:layout_alignStart="@+id/txtFinalExam" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtFinalExam"
        android:layout_above="@+id/lblProject"
        android:layout_alignRight="@+id/txtSecondExam"
        android:layout_alignEnd="@+id/txtSecondExam"
        android:layout_alignLeft="@+id/txtProject"
        android:layout_alignStart="@+id/txtProject" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtProject"
        android:layout_alignBottom="@+id/lblProject"
        android:layout_alignRight="@+id/txtSecondExam"
        android:layout_alignEnd="@+id/txtSecondExam"
        android:layout_alignLeft="@+id/txtOther"
        android:layout_alignStart="@+id/txtOther" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtOther"
        android:layout_alignBottom="@+id/lblOther"
        android:layout_alignRight="@+id/txtSecondExam"
        android:layout_alignEnd="@+id/txtSecondExam"
        android:layout_alignLeft="@+id/lblTitle"
        android:layout_alignStart="@+id/lblTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/txtFinalGrade"
        android:layout_toRightOf="@+id/txtHomework"
        android:layout_toEndOf="@+id/txtHomework" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/txtHomework"
        android:layout_toRightOf="@+id/txtHomework"
        android:layout_toEndOf="@+id/txtHomework" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/txtQuiz"
        android:layout_toRightOf="@+id/txtHomework"
        android:layout_toEndOf="@+id/txtHomework" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/txtFirstExam"
        android:layout_toRightOf="@+id/txtQuiz"
        android:layout_toEndOf="@+id/txtQuiz" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/txtSecondExam"
        android:layout_toRightOf="@+id/txtFirstExam"
        android:layout_toEndOf="@+id/txtFirstExam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/txtThirdExam"
        android:layout_toRightOf="@+id/txtSecondExam"
        android:layout_toEndOf="@+id/txtSecondExam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/txtFourthExam"
        android:layout_toRightOf="@+id/txtThirdExam"
        android:layout_toEndOf="@+id/txtThirdExam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/txtFinalExam"
        android:layout_toRightOf="@+id/txtFourthExam"
        android:layout_toEndOf="@+id/txtFourthExam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/txtProject"
        android:layout_toRightOf="@+id/txtFinalExam"
        android:layout_toEndOf="@+id/txtFinalExam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView14"
        android:layout_alignBottom="@+id/txtOther"
        android:layout_toRightOf="@+id/txtProject"
        android:layout_toEndOf="@+id/txtProject" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAdd"
        android:layout_below="@+id/txtOther"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

</RelativeLayout>
